<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="#FFF5EE"
    android:orientation="vertical"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:hint="Title"
        android:fontFamily="@font/pan"
        android:textColor="#333"
        android:textSize="24dp"
        android:layout_marginTop="9dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:background="#00000000"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    android:id="@+id/scrollview"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:id="@+id/imageLinearLayout"
    >
        <com.notepadOne.notepaddone.LinedEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Note"
            android:layout_alignEnd="@+id/title"
            android:id="@+id/note"

            android:layout_marginTop="27px"
            android:fontFamily="@font/pan"
            android:textColor="#000"
            android:textSize="19dp"
            android:paddingLeft="20dp"
            android:background="#00000000"
            android:layout_alignRight="@+id/title" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cancel_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/cancelbutton"

            />
         <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/image"
            android:visibility="invisible"
            android:layout_marginTop="12dp"
            android:scaleType="matrix"
          />

    </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:id="@+id/relativepaint"
        >
            <com.notepadOne.notepaddone.PaintView
                android:id="@+id/paintView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:id="@+id/linearColorLayout"
                android:orientation="horizontal">
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:id="@+id/blackbutton"
            />
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button2"
                android:id="@+id/bluebutton"
                />
                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_button3"
                    android:id="@+id/redbutton"
                    />

            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="ERASER"
                android:id="@+id/eraserButton"
                />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>